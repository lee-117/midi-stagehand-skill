import puppeteer from 'puppeteer';
import { PuppeteerAgent } from '@midscene/web/puppeteer';
{{#if needsChildProcess}}
import { execSync } from 'child_process';
{{/if}}
{{#if needsFs}}
import * as fs from 'fs';
{{/if}}

async function main() {
  const browser = await puppeteer.launch({
    headless: {{headless}},
{{#if acceptInsecureCerts}}
    ignoreHTTPSErrors: true,
{{/if}}
    args: [{{{chromeArgs}}}]
  });
  const page = await browser.newPage();
  await page.setViewport({ width: {{viewportWidth}}, height: {{viewportHeight}}{{#if deviceScaleFactor}}, deviceScaleFactor: {{deviceScaleFactor}}{{/if}} });
{{#if userAgent}}
  await page.setUserAgent('{{{userAgent}}}');
{{/if}}

  try {
    await page.goto('{{{url}}}');
{{#if waitForNetworkIdle}}
{{#if waitForNetworkIdleOpts}}
    await page.waitForNetworkIdle({{{waitForNetworkIdleOpts}}});
{{else}}
    await page.waitForNetworkIdle();
{{/if}}
{{/if}}
{{#if cookie}}
    const __cookies = JSON.parse(fs.readFileSync('{{{cookie}}}', 'utf-8'));
    await page.setCookie(...__cookies);
{{/if}}
{{#if hasAgentConfig}}
    const agent = new PuppeteerAgent(page, {{{agentConfigJson}}});
{{else}}
    const agent = new PuppeteerAgent(page);
{{/if}}

    // === Generated code start ===
{{{generatedCode}}}
    // === Generated code end ===

  } catch (error) {
    console.error('Execution failed:', error);
    throw error;
  } finally {
    await browser.close();
  }
}

main().catch(console.error);
