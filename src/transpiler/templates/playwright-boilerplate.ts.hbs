import { chromium } from 'playwright';
import { PlaywrightAgent } from '@midscene/web/playwright';
{{#if needsChildProcess}}
import { execSync } from 'child_process';
{{/if}}
{{#if needsFs}}
import * as fs from 'fs';
{{/if}}

async function main() {
  const browser = await chromium.launch({
    headless: {{headless}},
    args: [{{{chromeArgs}}}]
  });
  const context = await browser.newContext({
    viewport: { width: {{viewportWidth}}, height: {{viewportHeight}}{{#if deviceScaleFactor}}, deviceScaleFactor: {{deviceScaleFactor}}{{/if}} },
{{#if userAgent}}
    userAgent: '{{{userAgent}}}',
{{/if}}
{{#if acceptInsecureCerts}}
    ignoreHTTPSErrors: true,
{{/if}}
  });
  const page = await context.newPage();

  try {
    await page.goto('{{{url}}}');
{{#if waitForNetworkIdle}}
{{#if waitForNetworkIdleTimeout}}
    await page.waitForLoadState('networkidle', { timeout: {{waitForNetworkIdleTimeout}} });
{{else}}
    await page.waitForLoadState('networkidle');
{{/if}}
{{/if}}
{{#if cookie}}
    const __cookies = JSON.parse(fs.readFileSync('{{{cookie}}}', 'utf-8'));
    await context.addCookies(__cookies);
{{/if}}
{{#if hasAgentConfig}}
    const agent = new PlaywrightAgent(page, {{{agentConfigJson}}});
{{else}}
    const agent = new PlaywrightAgent(page);
{{/if}}

    // === Generated code start ===
{{{generatedCode}}}
    // === Generated code end ===

  } catch (error) {
    console.error('Execution failed:', error);
    throw error;
  } finally {
    await browser.close();
  }
}

main().catch(console.error);
